<% include _layout/header %>

<div class="row products">
    <h1 class="page-header"><%= p.title %></h1>
    <div class="col-xs-12 col-md-12">
        <img class="spi" src="/product_images/<%= p._id %>/<%= p.image %>" alt="" />
        <br/> 
        <%# comment desc with html %>
        <p><%- p.desc %></p>
        <hr>
        <p><%= process.env.CURRENCY %> <%= p.price.toLocaleString(process.env.LOCALE) %></p>
        <% if (loggedIn) { %>
        <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
        <% } else { %>
        <p>You must be logged in to purchase</p>
        <% } %>
    </div>    
    
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image){ %>
            <% if(image != "thumbs") { %>
            <li>
                <a data-fancybox="gallery" href="/product_images/<%= p._id %>/gallery/<%= image %>">
                    <img class="pimage" src="/product_images/<%= p._id %>/gallery/<%= image %>" alt="" >
                </a>
            </li>
            <% } %>
            <% }); %>
        </ul>
    </div>
</div>

<% include _layout/footer %>